@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
<!DOCTYPE html>
<html lang="ru"
      xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout">
<head>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Медицинский портал</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
    <!-- Custom fonts for this template -->
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />



    <!-- Bootstrap core JavaScript -->
    <!-- Plugin JavaScript -->
    <script src="/webjars/jquery.easing/1.4.1/jquery.easing.js"></script>
    <script type="text/javascript" src="http://scriptjava.net/source/scriptjava/scriptjava.js"></script>


    <script type="text/javascript">
        $('#registr').click(function () {
            alert("0");
            $.ajax({
                type: "POST",
                url: "Client/Registration1"
            });
        });

        function reg() {
            alert("reg");
            $.ajax({
                type: "POST",
                url: "Client/Registration1"
            });
        }
    </script>
</head>




<body id="page-top">

    <!-- Navigation -->

    <header>
        <div class="header_resize">
            <div class="menu_nav">
                <menu_nav>
                    <ul class="top-menu">
                        <li><a href="/Home/Index">Главная</a></li>
                        <li><a href="/Procedure/Procedures">Процедуры</a></li>
                        <li><a href="~/Recall/ListDoctors"><span>Отзывы</span></a></li>
                        <li><a href="~/Doctor/Doctors"><span>Докторы</span></a></li>
                        @{
                            if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    @Ajax.ActionLink("Зарегистрироваться", "Registration", "Client",
new AjaxOptions { UpdateTargetId = "result" })
                                </li>
                                <li>
                                    @Ajax.ActionLink("Войти", "Autorization", "Client",
new AjaxOptions { UpdateTargetId = "result" })
                                </li>
                            }
                            else
                            {
                                <li><a href="/Home/Logout">Выход/Пользователь:@User.Identity.Name</a></li>
                            }
                        }
                    </ul>
                </menu_nav>
            </div>
            <div class="logo">
                <h1><a href="/Home/Index"><span>Медицинский </span>портал <small>Давайте обсудим</small></a></h1>
            </div>
            <div class="clr"></div>

            <div class="clr"></div>
        </div>
    </header>

    <div layout:fragment="content">
        <div id="result">



            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="fbg">
            <div class="fbg_resize">
                <div class="col c1">
                    <h2><span>Медицинский</span> Портал</h2>
                </div>

                <button id="registr"  type="button" onclick="reg()">Зарегистрироваться</button>





                <div class="col c3">
                    <h2><span>Наши</span> Контакты</h2>
                    <p class="contact_info">
                        <span>Адрес:</span> Ульяновск<br />
                        <span>Телефон:</span> +7 900 800 70 60<br />
                        <span>FAX:</span> +458-4578<br />
                        <span>E-mail:</span> <a href="#">mail@mail.ru</a>
                    </p>
                </div>

                <div class="clr"></div>
            </div>
        </div>
    </footer>
    <!-- Custom scripts for this template -->
    @section Scripts{
        <script type="text/javascript">
            $('#registr').click(function () {
                alert("1");
                $.ajax({
                    type: "POST",
                    url: "ClientController/Registration1"
                });
            });
        </script>
    }

</body>

</html>
