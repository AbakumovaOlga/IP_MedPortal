
@model  IEnumerable<WebTransportCompany.Models.BaseModel>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="main">
        <div class="content">
            <div class="content_resize">
                <div class="mainbar">
                    <div class="article">

                        <div class="clr"></div>
                        <div class="center">
                            <p>Доктора</p>

                            @{ var grid = new WebGrid(Model); }
                            <div>
                                @grid.GetHtml(columns: grid.Columns(
                                                                             grid.Column("Id", "№"),
                                                                             grid.Column("Name", "Имя"),
                                                                             grid.Column("Specialty", "Специальность")
                         ), tableStyle: "table-bordered")
                            </div>
                            <input type="button" value="Добавить" onClick='location.href="AddDoctor"'>
                        </div>

                        <div class="clr"></div>
                    </div>

                </div>
                <div class="sidebar">
                    <div class="clr"></div>
                    <div class="gadget">
                        <h2 class="star"><span>Главное</span> Меню</h2>
                        <div class="clr"></div>
                        <ul class="sb_menu">
                            <a href="home.html">Главная</a>
                            <a href="call.html">Вызвать врача на дом</a>
                            <a href="/enroll/">Записаться к врачу</a>
                            <a href="/contact/">Контакты</a>
                        </ul>
                    </div>
                    <div class="gadget">
                    </div>
                </div>
                <div class="clr"></div>
            </div>
        </div>
    </div>
</body>
