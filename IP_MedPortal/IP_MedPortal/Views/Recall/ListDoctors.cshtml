@{
    ViewBag.Title = "ListDoctors";

}
@model WebTransportCompany.Models.Recall
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<body>

    <div class="content">
        <div class="content_resize">
            <div class="mainbar">
                <div class="article">
                    <h2><span>Отличное решение </span> для ваших целей</h2>

                    <div class="clr"></div>
                    <div class="center">
                        <div class="table-responsive">

                            <table border="1" cellspacing="10" cellpadding="10" class="table table-striped">

                                @{

                                    foreach (var Doctor in ViewBag.ListDoctors)
                                    {
                                        <tr>

                                            <td id="@Doctor.Id"><a href="/Recall/AddRecall/@Doctor.Id">@Doctor.Name</a></td>

                                            @if (Doctor.Recalls != null)
                                            {
                                                foreach (var Recall in Doctor.Recalls)
                                                {
                                                    

                                        <tr>
                                            <td> __________ </td>
                                            <td bgcolor="#2a8249" headers="@Recall.DoctorId"><a href="/Recall/Recall?Name=@Recall.Name&DoctorId=@Recall.DoctorId">@Recall.Name</a></td>
                                        </tr>
                                            }
                                        }

                                            </tr>

                                        }
                                }


                            </table>
                        </div>

                    </div>

                    <div class="clr"></div>
                </div>

            </div>
            <div class="sidebar">

                <div class="clr"></div>
                <div class="gadget">
                    <h2 class="star"><span>Главное</span> Меню</h2>
                    <div class="clr"></div>
                    <ul class="sb_menu">
                        <a href="home.html">Главная</a>
                        <a href="call.html">Вызвать врача на дом</a>
                        <a href="/enroll/">Записаться к врачу</a>
                        <a href="/contact/">Контакты</a>

                    </ul>
                </div>
                <div class="gadget">
                </div>
            </div>
            <div class="clr"></div>
        </div>
    </div>

</body>

